<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Portfolio" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Portfolio" parent="Base.Theme.Portfolio" />

    <style name="MyLayoutInputTextOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@color/blue11</item>
        <item name="boxStrokeWidthFocused">@dimen/dp1</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginStart">@dimen/dp20</item>
        <item name="android:layout_marginEnd">@dimen/dp20</item>
    </style>

    <style name="Button.GradientBorderRounded" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/size18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="backgroundTint">@null</item>
    </style>


</resources>